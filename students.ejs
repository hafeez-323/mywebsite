<div class="container-fluid bg-3 text-center">    
  <h3><%= page %></h3><br>
  <div class="row">
    <div class="col-sm-4">
     
        <% if (students.length>0) {%>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>regid</th>
                    <th>gender</th>
                    <th>class</th>
                    <th>_id</th>
                </tr>
            </thead>
             <tbody>
                <% for(var i=0; i<students.length; i++){%>
                    <tr>
                        <td><a href="/students/show/<%= students[i]._id %>"><%= students[i].name %></a></td>
                        <td><%= students[i].name %></td>
                        <td><%= students[i].gender %></td>
                        <td><%= students[i].regid %></td>
                        <td><%= students[i].class %></td>
                        <td><%= students[i]._id %></td>
